---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { AdvancedSearch } from '../components/islands/AdvancedSearch';
---

<DashboardLayout title="Search - Homework Planner" activeNav="search">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Search Tasks</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-1">
        Find tasks with powerful search and filters
      </p>
    </div>
    
    <AdvancedSearch client:load />
  </div>
</DashboardLayout>
